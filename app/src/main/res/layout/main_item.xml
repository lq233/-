<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:clickable="true"
    app:cardCornerRadius="10dp"
    app:cardElevation="5dp"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/main_tx"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_margin="15dp" />

        <TextView
            android:id="@+id/main_author"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/main_tx"
            android:layout_marginBottom="5dp"
            android:layout_toEndOf="@id/main_tx"
            android:layout_toRightOf="@id/main_tx"
            android:text="author" />

        <TextView
            android:id="@+id/main_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_margin="15dp"
            android:text="type" />
    </RelativeLayout>

        <TextView
            android:id="@+id/main_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"
            android:layout_below="@id/main_tx"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/main_xin"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentBottom="true"
                android:layout_margin="10dp"
                android:background="@mipmap/xin" />

            <ImageView
                android:id="@+id/main_clock"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignBottom="@id/main_xin"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@id/main_xin"
                android:background="@drawable/clock" />

            <TextView
                android:id="@+id/main_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/main_clock"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@id/main_clock"
                android:text="时间" />
        </RelativeLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>