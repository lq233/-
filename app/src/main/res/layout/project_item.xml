<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="180dp"
    app:cardElevation="5dp"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/project_img"
            android:layout_width="100dp"
            android:layout_height="130dp"
            android:layout_margin="10dp" />

        <ImageView
            android:id="@+id/project_tx"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignTop="@id/project_img"
            android:layout_toRightOf="@id/project_img" />

        <TextView
            android:id="@+id/project_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/project_tx"
            android:layout_margin="5dp"
            android:layout_toRightOf="@id/project_tx"
            android:enabled="true"
            android:maxLines="1"
            android:saveEnabled="true" />

        <TextView
            android:id="@+id/project_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/project_tx"
            android:layout_below="@id/project_title"
            android:layout_marginTop="5dp"
            android:enabled="true"
            android:maxLines="4" />

        <TextView
            android:id="@+id/project_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/project_img"
            android:layout_alignLeft="@id/project_tx" />

        <TextView
            android:id="@+id/project_author"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/project_img"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/project_date" />
    </RelativeLayout>
</android.support.v7.widget.CardView>